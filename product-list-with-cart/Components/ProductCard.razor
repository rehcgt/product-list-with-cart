@using product_list_with_cart.Models
<MudItem xs="12" sm="6" md="4">
    <MudPaper Elevation="2" Class="pa-4" Style="min-height: 200px;">
        <MudElement HtmlTag="img" Src="@imageUrl" Alt="Product Image" Style="max-width: 100%; max-height: 100%; height: auto;" />
        <AddToCartBtn></AddToCartBtn>
        <MudText Typo="Typo.subtitle1" Style="@($"color:{Colors.Gray.Default};")">@p.Category</MudText>
        <MudText Typo="Typo.h6" Style="font-weight: bold">@p.Name</MudText>
        <MudText Typo="Typo.h5" Style="@($"color:{Colors.Red.Default};")">$@p.Price</MudText>
    </MudPaper>
</MudItem>

@code {
    [Parameter]
    public string imageUrl { get; set; } = "";
    [Parameter]
    public Product p { get; set; } = new Product();
}